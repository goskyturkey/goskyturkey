# GoSkyTurkey Environment Variables
# Copy this file to .env and fill in your values

# === REQUIRED (No defaults - app will fail without these) ===
JWT_SECRET=dev-secret-change-me-7e9355991154bc1e74840cba4a1b134a
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key

# === OPTIONAL (Have sensible defaults) ===
NODE_ENV=development
BASE_URL=https://goskyturkey.com
NEXT_PUBLIC_API_URL=https://goskyturkey.com/api
ALLOWED_ORIGINS=https://goskyturkey.com

# MongoDB (default works with docker-compose)
